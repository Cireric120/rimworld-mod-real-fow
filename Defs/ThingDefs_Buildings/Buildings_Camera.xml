	<ThingDef ParentName="BaseCamera">
		<defName>SurveillanceCamera_UnderRoof</defName>
		<label>ceiling surveillance camera</label>
		<description>Surveillance camera that provide vision for an area. Cheaper for indoor build. 18 Camera view range radius.</description>
		<altitudeLayer>Skyfaller</altitudeLayer>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<clearBuildingArea>false</clearBuildingArea>
		<placeWorkers>
			<li>RimWorldRealFoW.PlaceWorker_UnderRoof</li>
		</placeWorkers>
		<graphicData>
			<texPath>Things/Buildings/SurveillanceCamera_UnderRoof</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
		</graphicData>
		<costList>
			<Steel>25</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="RimWorldRealFoW.CompProperties_ProvideVision">
				<viewRadius>18</viewRadius>
				<needManned>true</needManned>
			</li>
		</comps>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<specialDisplayRadius>17.9</specialDisplayRadius>
	</ThingDef>
