			<Flammability>0.1</Flammability>
		</statBases>
		<size>(1,1)</size>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>250</basePowerConsumption>
			</li>
			<li Class="RimWorldRealFoW.CompProperties_ProvideVision">
				<viewRadius>50</viewRadius>
			</li>
		</comps>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<specialDisplayRadius>49.9</specialDisplayRadius>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<uiIconOffset>(0, 0.2)</uiIconOffset>
	</ThingDef>
	<ThingDef ParentName="BaseVisionStuff">
		<defName>SecurityBell</defName>
		<label>security bell</label>
		<description>Bell to see if enemies are coming. It reveals a very narrow range of vision. The enemy disappears when you step on it..</description>
		<graphicData>
			<texPath>Things/Buildings/SecurityBell</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<rect>(0,0,1,0.15)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<drawerType>RealtimeOnly</drawerType>
		<rotatable>false</rotatable>
		<tickerType>Normal</tickerType>
		<minifiedDef>MinifiedThing</minifiedDef>
		<statBases>
			<Mass>0.2</Mass>
			<MaxHitPoints>5</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Flammability>0.5</Flammability>
			<Beauty>-1</Beauty>
			<Cleanliness>0</Cleanliness>
		</statBases>
		<costList>
			<Steel>5</Steel>
		</costList>
		<designationCategory>Security</designationCategory>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>0.5</fuelConsumptionRate>
				<fuelCapacity>5.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>1</initialFuelPercent>
			</li>
			<li Class="RimWorldRealFoW.CompProperties_ProvideVision">
				<viewRadius>3</viewRadius>
			</li>
		</comps>
		<building>
			<expandHomeArea>false</expandHomeArea>
			<ai_chillDestination>false</ai_chillDestination>
		</building>
		<specialDisplayRadius>2.9</specialDisplayRadius>
